        <div class="entire-home-page ">
            <div class="posts">
                <%loop.forEach(function(post){%>
                    <%for(var i=0;i<post.communityposts.length;i++){%>
                        <div class="home3">
                            <emphasize> âœ’ Posted By
                                <%=post.communityposts[i].writer.name%> on
                                    <%=post.communityposts[i].Date%>
