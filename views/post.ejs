                            url: "/discussion/<%=post._id%>",
                            data: { //Whatever we want to send we write it right here
                                input: input //this is how we send value
                            },
                            success: function() {
                                console.log("<%=post._id%>");
                                console.log("Sucess");
                                $textarea.append("<b><br> <%=name%>:</b> <p>" + $msgcontent.val() + "</p>")
                            }
