<%- include('partials/first') %>
    <div class="entireloginpage">
        <div class="logindiv">
            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" name="username">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <a href="/registering" style="color: blue;"> Don't Have any Account! Click here !</a>
                <br>
                <button type="submit" class="btn btn-dark">Login</button>
            </form>
        </div>
        <br>
        <p style="border-bottom: 1px solid grey; width: 33%; margin-left: 20%;"> </p>
        <br>
        <p style="margin-left: 20%;">Or Log-In with</p>
        <div class="logingoogle">
            <div class="col-sm-4">

                <a class="btn btn-danger btn-social btn-google" href="/auth/google" role="button" style="width:48px; height:45px;border-radius:50%;margin-right: 10px; float: left;">
                    <i class="fab fa-google">+</i>
                </a>
                <a class="btn btn-primary btn-social btn-google" href="/auth/facebook" role="button" style="width: 48px;height:45px;border-radius: 50%; float: left;">
                    <i class="fab fa-facebook"></i>
                </a>
            </div>
        </div>


    </div>


    <body>
        <script>
            window.fbAsyncInit = function() {
                FB.init({
                    appId: '{your-app-id}',
                    cookie: true,
                    xfbml: true,
                    version: '{api-version}'
                });

                FB.AppEvents.logPageView();

            };

            (function(d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) {
                    return;
                }
                js = d.createElement(s);
                js.id = id;
                js.src = "https://connect.facebook.net/en_US/sdk.js";
                fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));
        </script>
    </body>

